                android:layout_height="match_parent" />

            <RelativeLayout
                android:id="@+id/local_video_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </HorizontalScrollView>

    <RelativeLayout
